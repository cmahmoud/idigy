{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "moduleResolution": "Node",
        "declarationDir": "lib/types"
    },
    "include": ["src/**/*"],
    "exclude": ["test", "node_modules"]
}
